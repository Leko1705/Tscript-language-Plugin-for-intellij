<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.tscript.Language-Plugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Tscript-Programming-Language</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="lennart1705@gmail.com"/>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>
        AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
        AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
    </description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

        <fileType
                name="Test File"
                implementationClass="com.test.language.TestFileType"
                fieldName="INSTANCE"
                language="TestLang"
                extensions="test">

        </fileType>

        <lang.parserDefinition
                language="TestLang"
                implementationClass="com.test.language.psi.TestParserDefinition"/>

        <lang.syntaxHighlighterFactory
                language="TestLang"
                implementationClass="com.test.language.highlight.TestSyntaxHighlighterFactory"/>

        <annotator
                language="TestLang"
                implementationClass="com.test.language.highlight.TestAnnotator"/>

        <completion.contributor
                language="TestLang"
                implementationClass="com.test.language.autocompletion.SimpleCompletionContributor"/>

        <!-- <lang.formatter language="TestLang" implementationClass="com.test.language.formatting.SimpleFormattingModelBuilder"/> -->

        <typedHandler implementation="com.test.language.formatting.TestTypeHandler"/>
        <backspaceHandlerDelegate implementation="com.test.language.formatting.TestBackspaceHandler"/>

        <compiler.task execute="BEFORE" implementation="com.test.language.run.build.BuildTscriptTask"/>
        <configurationType implementation="com.test.language.run.TestRunConfigurationType"/>
        <runConfigurationProducer implementation="com.test.language.run.TestRunConfigProducer"/>

        <xdebugger.breakpointType implementation="com.test.language.run.debug.breakpoints.TestLineBreakPointType"/>
        <xdebugger.breakpointType implementation="com.test.language.run.debug.breakpoints.TestFunctionBreakPointType"/>
    </extensions>


    <actions>
        <!-- Your toggle action definition -->
        <action id="com.yourcompany.yourplugin.ToggleMySettingAction"
                class="com.test.settings.WebSelectAction"
                text="Enable My Setting"
                description="Toggles a custom setting on or off">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>

         <action id="com.tscript.ToWebScriptAction"
                class="com.test.language.conversion.ToWebScriptAction"
                text="Convert to Web-Tscript"
                description="Runs this Tscript file">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="$Delete"/>
        </action>

        <action id="com.tscript.ToWebScriptActionCodeMenu"
                class="com.test.language.conversion.ToWebScriptAction"
                text="Convert to Web-Tscript"
                description="Runs this Tscript file">
            <add-to-group group-id="CodeMenu" anchor="after" relative-to-action="$Delete"/>
        </action>

        <action id="com.tscript.BytecodeInspector"
                class="com.test.language.conversion.BytecodeInspectorAction"
                text="Inspect Bytecode"
                description="Inspect the tscript bytecode for this file">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="$Delete"/>
        </action>

        <action id="com.tscript.BytecodeInspectorInCodeMenu"
                class="com.test.language.conversion.BytecodeInspectorAction"
                text="Inspect Bytecode"
                description="Inspect the tscript bytecode for this file">
            <add-to-group group-id="CodeMenu" anchor="after" relative-to-action="$Delete"/>
        </action>

        <action id="com.tscript.link.doc"
                class="com.test.language.DocumentationLinkAction"
                text="Open Web-Tscript Documentation"
                description="Open web-tscript documentation webpage"
                icon="AllIcons.Actions.InlayGlobe">
            <add-to-group group-id="HelpMenu" anchor="after" relative-to-action="About"/>
        </action>

    </actions>

</idea-plugin>